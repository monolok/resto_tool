<div class="container-fluid">
	<div class="row center pad-bot">
		<div class="pad-bot2">
			<h3><%= @employee.name%></h3>
			<strong class="inherit"><%= @employee.position%></strong>
		</div>
		<div class="letter-spacing pad-bot2">
			<%= link_to employees_path do%>
				<i class="fa fa-arrow-left fa-2x"></i>
			<%end%>
			<%= link_to employee_score_new_path(@employee.id) do%>
				<i class="fa fa-check-square-o fa-2x"></i>
			<%end%>
			<%= link_to @employee, method: :delete, data: { confirm: 'Are you sure?' } do %>
	        	<i class="fa fa-trash fa-2x"></i>
	        <%end%>
	        <%= link_to edit_employee_path(@employee) do%>
	        	<i class="fa fa-pencil-square-o fa-2x"></i>
	        <%end%>	
        </div>
        <div class="inherit">
	        <%case @employee.pom%>
	          <%when 1%>
	          	<i class="fa fa-star"></i>
	          <%when 2%>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
			  <%when 3%>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
			  <%when 4%>
			  	<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
			  <%when 5%>
			  	<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
				<i class="fa fa-star"></i>
			  <%else%>
			<%end%>
		</div>
	</div>
	<% if @last_qu_hash.nil?%>
	<div class="row center pad-top">
		<mark>NO REVIEWS</mark>		
		<%= link_to "Review #{@employee.name} now", employee_score_new_path(@employee.id), class: "inherit"%>
	</div>
	<%else%>
		<div class="row">
			<div class="col-sm-4">
				<h5 class="text-info">Latest scores:</h5>
				<% @employee.scores.each do |r|%>
				<div class="border-score">
					<div class="row">
						<div class="col-offset-4 col-xs-8">
							<%= r.created_at.strftime("%A %B %d")%>	
						</div>
					</div>
					<%if r.average > 2.5 %>
						<div class="row">
							<div class="col-offset-8 col-xs-4">
								<p class="bg-success"><%= r.average%>/5</p>
							</div>
						</div>
					<%else%>
						<div class="row">
							<div class="col-offset-8 col-xs-4">
								<p class="bg-danger"><%= r.average%>/5</p>
							</div>
						</div>					
					<%end%>
					<% if r.reviewer_id.nil?%>
						<div class="row">
							<div class="col-xs-8">
								<p>Reviewed by Admin</p>
							</div>
						</div>
					<%else%>
						<div class="row">
							<div class="col-xs-8">
								<p>Reviewed by: <%= Reviewer.find(r.reviewer_id).name%></p>
							</div>
						</div>						
					<%end%>
				</div>
				<%end%>
			</div>
			<div class="col-sm-4">
				<h5 class="text-success">Strengths:</h5>
				<%= render "case_for_qa"%>
			</div>
			<div class="col-sm-4">
				<h5 class="text-danger">Weaknesses:</h5>
				<%= render "case_for_pb"%>
			</div>
		</div>
	<%end%>
</div>

<%= render "modals"%>