<%if user_signed_in?%>
  <div class="row">
    <div class="col-xs-8" id="people-print">
      <div class="row pad">
        <% @employees.each do |employee| %>

          <%@list_s = Array.new%>
          <%if not employee.scores.blank?%>
            <%employee.scores.each do |s|%>
              <%@list_s.push(s.average)%>
              <%@kf_sum = @list_s.inject(:+)%>
              <%@kf = @kf_sum/employee.scores.count%>
            <%end%>
          <%else%>
            <%@kf = 0%>
          <%end%> 

          <div class="col-sm-4 border-employee" id="margin-bot-print">
            <div class="row pad-bot">
              <strong><%= link_to employee.name, employee%></strong>
            </div>
            <div class="row">
              <%if @kf > 2.5 %>
                <p class="text-success">KEEP</p>
              <%elsif @kf == 0 %>
                <p>No review</p>
              <%else%>
                <p class="text-danger">FIRE</p>
              <%end%>
            </div>
            <div class="row">
              <%= employee.position%>
            </div>

            <div class="row pad-bot3" id="print-score">
              <% if employee.scores.last.nil?%>
                <div><mark>No reviews yet</mark></div>
              <%elsif employee.scores.last.reviewer_id.nil?%>
                <div>Last review by:</div>
                <div><mark>ADMIN</mark></div>
              <%else%>
                <%@last_time_reviewer_id = employee.scores.last.reviewer_id%>
                <% @reviewer = Reviewer.find(@last_time_reviewer_id)%>
                <div>Last review by:</div>
                <div><%= @reviewer.name%></div>
              <%end%>
            </div> 

          <% if user_signed_in?%>
            <div class="row" id="print-score">
              <%= link_to employee, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash fa-2x"></i>
              <%end%>
              <%= link_to employee_score_new_path(employee.id) do%>
                <i class="fa fa-check-square-o fa-2x"></i>
              <%end%>
            </div>
          <%end%>                   
          </div>
        <% end %>    
      </div>
    </div>

    <div class="col-xs-offset-1 col-xs-3" id="print-score">
      </br>
      <strong>Your reviewers:</strong>
      <div class="row pad">     
        <ul class="col-xs-12 ul_style border-reviewer">
          <%if current_user.reviewers.blank? %>
            <li>No reviewers ! <%= link_to "Add one", new_reviewer_registration_path %></li>
          <%else%>
            <% current_user.reviewers.each do |r| %>
              <li class="text-capitalize pad-bot"><strong><%= r.name%></strong></li>
              <li id="pad-li-connected">Last connection:</li>
              <li class="pad-bot"><em><%= r.updated_at.strftime("%A %B %d")%></em></li>
              <%if r.scores.empty?%>
                <li class="pad-bot"><mark>No reviews done yet</mark></li>
              <%else%>
                <li class="pad-bot">Last review:</li>
                <li><%= link_to r.scores.last.employee.name, employee_path(r.scores.last.employee.id) %></li>
              <%end%>
        
                <%= link_to "reviewer_delete/#{r.id}", :method => :delete do%>
