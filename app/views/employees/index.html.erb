<%=console%>
<div class="container-fluid pad-index">
  <div class="row center pad-bot" id="pad-bot-print-mini">
    <h3 class="center pad-bot2 click" data-toggle="modal" data-target=".bs-example-modal-sm">Your people</h3>

    <div class="border-cat">
      <%= link_to "All", employees_path%>     
    </div>

    <%c = 1%>
    <%while c != 6 %>
      <div class="border-cat">
            <%if user_signed_in?%>
                <%= link_to employees_path(pom: "#{c}") do%>
                  <%= c%><i class="fa fa-star"></i>
                <%end%>
            <%else%>
              <%case c%>
                <%when 1%>
                  <%if current_reviewer.vl == 1%>
                    <%= link_to do%>
                      <i class="fa fa-ban"></i>
                    <%end%>                  
                  <%else%>
                    <%= link_to employees_path(pom: "#{c}") do%>
                      <%= c%><i class="fa fa-star"></i>
                    <%end%>
                  <%end%>
                <%when 2%>
                  <%if current_reviewer.l == 1%>
                    <%= link_to do%>
                      <i class="fa fa-ban"></i>
                    <%end%>                  
                  <%else%>
                    <%= link_to employees_path(pom: "#{c}") do%>
                      <%= c%><i class="fa fa-star"></i>
                    <%end%>
                  <%end%>
                <%when 3%>
                  <%if current_reviewer.m == 1%>
                    <%= link_to do%>
                      <i class="fa fa-ban"></i>
                    <%end%>                  
                  <%else%>
                    <%= link_to employees_path(pom: "#{c}") do%>
                      <%= c%><i class="fa fa-star"></i>
                    <%end%>
                  <%end%>
                <%when 4%>                      
                  <%if current_reviewer.h == 1%>
                    <%= link_to do%>
                      <i class="fa fa-ban"></i>
                    <%end%>                  
                  <%else%>
                    <%= link_to employees_path(pom: "#{c}") do%>
                      <%= c%><i class="fa fa-star"></i>
                    <%end%>
                  <%end%>
                <%when 5%>
                  <%if current_reviewer.vh == 1%>
                    <%= link_to do%>
                      <i class="fa fa-ban"></i>
                    <%end%>                  
                  <%else%>
                    <%= link_to employees_path(pom: "#{c}") do%>
                      <%= c%><i class="fa fa-star"></i>
                    <%end%>
                  <%end%>
                <%else%>
                <%# END OF RUBY CASE STATEMENT%>
              <%end%>
            <%end%>
      </div>
    <%c = c+1%>
    <%end%>

    <div class="border-cat click">
        <i class="fa fa-print fa-2x", onclick="window.print();return false;"></i>
    </div>
  </div>

<%if user_signed_in?%>
  <div class="row">
    <div class="col-xs-8" id="people-print">
      <div class="row pad">
        <%= render "employees_loop"%>   
      </div>
    </div>

    <div class="col-xs-offset-1 col-xs-3" id="print-score">
      </br>
      <strong>Your reviewers:</strong>
      <div class="row pad">   

        <ul class="col-xs-12">
          <%if current_user.reviewers.blank? %>
            <li>No reviewers ! <%= link_to "Add one", new_reviewer_registration_path %></li>
          <%else%>
            <% current_user.reviewers.each do |r| %>
              <div class="ul_style border-reviewer">
                <li class="text-capitalize pad-bot"><strong><%= r.name%></strong></li>
                <li id="pad-li-connected">Last connection:</li>
                <li class="pad-bot"><em><%= r.updated_at.strftime("%A %B %d")%></em></li>
                <%if r.scores.empty?%>
                <li class="pad-bot"><mark>No reviews done yet</mark></li>
                <%else%>
                <li class="pad-bot">Last review:</li>
                <li><%= link_to r.scores.last.employee.name, employee_path(r.scores.last.employee.id) %></li>
                <%end%>

                <%= link_to "reviewer_delete/#{r.id}", :method => :delete do%>
                <i class="fa fa-trash fa-2x"></i>
                <%end%>

                <%= link_to edit_reviewer_registration_path do%>
                <i class="fa fa-pencil-square-o fa-2x"></i>
                <%end%>
              </div>
            <%end%>
          <%end%>
        </ul>

      </div>
    </div>
  </div>
<%else%>
  <div class="row">
    <div class="col-xs-12">
      <div class="row pad">
        <%= render "employees_loop"%>   
      </div>
    </div>
  </div>
<%end%>

</div>

<!-- Small modal -->
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%if user_signed_in?%>
        <%c = current_user%>
        <div class="row pad-bot pad-top">
          <div class="col-xs-offset-4">
            <%case current_user.plan_id%> 
              <%when nil%>
                <div>People: <%= c.employees.count%></div>
                <em>You can still add <%= 5 - c.employees.count%></em></br></br>
                <div>Reviewer: <%= c.reviewers.count%></div>
                <em>You can still add <%= 1- c.reviewers.count%></em>
              <%when "basic"%>
                <div>People: <%= c.employees.count%></div>
                <em>You can still add <%= 25 - c.employees.count%></em></br></br>
                <div>Reviewer: <%= c.reviewers.count%></div>
                <em>You can still add <%= 5 - c.reviewers.count%></em>
              <%when "pro"%>
                <div>People: <%= c.employees.count%></div>
                <em>You can still add <%= 50 - c.employees.count %></em></br></br>
                <div>Reviewer: <%= c.reviewers.count%></div>
                <em>You can still add <%= 10 - c.reviewers.count%></em>
              <%else%>
                <div>People: <%= c.employees.count%></div>
                <em>Custom plan</em></br></br>
                <div>Reviewer: <%= c.reviewers.count%></div>
                <em>Custome plan</em>
            <%end%>         
          </div>
        </div>
      <%else%>
        <%c = current_reviewer%>
        <p>People: <%= c.user.employees.count%></p></br></br>
        <p>Reviewer: <%= c.user.reviewers.count%></p>
      <%end%>
    </div>
  </div>
</div>